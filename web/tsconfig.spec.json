{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node",
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,      
      "types": [
        "./node_modules/user-agent-data-types",
        "@testing-library/jest-dom",
        "jest",
        "node"
       ],
      "verbatimModuleSyntax": false,
    },
    "include": [
      "src/**/.spec.ts",
      "snapshotResolver.ts"
    ]
  }
  